extends layout

block content
    script(src="https://apis.google.com/js/platform.js", async, defer)
    .container.span4.center
        h1 Login
        p Please register using your Google Plus account.
        .g-signin2(data-onsuccess="onSignIn", data-theme="dark")
        script.
            function onSignIn(googleUser){
                // Useful data for your client-side scripts:
                var profile = googleUser.getBasicProfile();
                console.log("ID: " + profile.getId()); // Don't send this directly to your server!
                console.log("Name: " + profile.getName());
                console.log("Image URL: " + profile.getImageUrl());
                console.log("Email: " + profile.getEmail());

                // The ID token you need to pass to your backend:
                var id_token = googleUser.getAuthResponse().id_token;
                console.log("ID Token: " + id_token);

                //Send to server to authenticate the session
                var xhr = new XMLHttpRequest();
                xhr.open('POST', 'http://localhost:3000/tokensignin'); //ec2-52-26-176-89.us-west-2.compute.amazonaws.com/tokensignin');
                xhr.onload = function() {
                  console.log('Signed in as: ' + xhr.responseText);
                };
                xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
                xhr.send('idtoken='+id_token+"&email="+profile.getEmail()+"&name="+profile.getName());
            };

            function signOut() {
                var auth2 = gapi.auth2.getAuthInstance();
                auth2.signOut().then(function() {
                    console.log('User signed out.');
                });
            }