doctype html
html
    head
        title= title

        link(rel='stylesheet', href='/stylesheets/navStyle.css')
        link(rel='stylesheet', href='/stylesheets/smoothness/jquery-ui.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        block headStyles

        script(src='http://code.jquery.com/jquery-1.12.0.min.js')
        block headScripts

        meta(name="google-signin-scope", content="profile email")
        meta(name="google-signin-client_id", content="159196631200-d1cf3beikgm0km95rjnvierd952ig5kc.apps.googleusercontent.com")
    body

        div(id="wrapper")
            div(id="navigation")
                nav
                    .navbar-header
                        a.navbar-brand(href="/") Software Tool Tips
                    ul.topnav
                        li
                            a(href="/About") About
                        li
                            a(href="#") Contact
                        ul.topnav.right
                            li
                                a(href="/Search") Search
                            li
                                a(href="/Product/New") New Post
                            if(session && session.isLoggedIn)
                                li
                                    a(href="/user/" + session.user.userId) #{session.user.username}
                                li
                                    a(href="/Logout") Log Out
                            else
                                li
                                    a(href="/auth/google") Login
                                li
                                    a(href="/auth/google") Sign Up
            .main-body
                block content

        block bottomScripts
