extends layout

block headStyles
    link(rel='stylesheet', href='/stylesheets/indexStyle.css')


block content

    .container
        h1 Software Tool Tips
        p 3rd party software reviews

    .container
        .col-md-6
            h2 New Posts
            .container.col-md-11
                each product in newProducts
                    a.no-decoration(href="/product/#{product.productName}/#{product.version}")
                        .post.clickable-row
                            h4.no-decoration= product.productName + " - " + product.version
                            .container.image.col-md-4
                               img(src="#{product.logoUrl}",class="logo")
                            p.no-decoration= product.description

        #popular.col-md-6
            h3 Popular Posts
            .container.col-md-11
                each product in popProducts
                    .post
                        h4= product.productName + " - " + product.version
                        .container.image.col-md-4
                            img(src="#{product.logoUrl}",class="logo")
                        p= product.description




